                     <%= link_to "수정", edit_post_path(post)%>
                     </figure>
                     <figure class="label label-info">
                      <a href="/destroy/<%=post.id%>">삭제</a>
                     </figure>
                   </th>
                   </tr>
                 <% end %>
                 </table>

                 </div>
      </div>
      <!--end container-->
  </div>
  <!--end block-->
  <!--end block-->

      <div class="bg opacity-30">
          <img src="assets/img/bg-map.jpg" alt="">
      </div>
  </div>
                <!--end col-md-9-->
            </div>
            <!--end row-->

        <!--end container-->
    <!--end page-content-->

</div>
<!--end page-wrapper-->
<a href="#page-header" class="to-top scroll" data-show-after-scroll="600"><i class="arrow_up"></i></a>


